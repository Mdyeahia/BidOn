<div class="modal-header">
    <h5 class="modal-title">Add Category</h5>
</div>
<form id="CategoryCreateTable" style="overflow: auto">
    <div class="modal-body">
        <input type="hidden" name="Id" />

        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" id="Name" />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" class="form-control" name="Description" id="Description"/>
        </div>
        <div class="modal-footer">
            <button id="cancelBtn" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="AuctionSaveBtn" type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</form>
<script>
    $("#AuctionSaveBtn").click(function () {
        if ($("#CategoryCreateTable").valid()) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "Category")',
                data: $('#CategoryCreateTable').serialize(),

            })

            .done(function (response) {

                $("#CategorytableContainer").html(response);
                $('#CategoryFormModel').modal('hide');
                //$("#contentArea").html('');

            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
        }

    });
</script>


