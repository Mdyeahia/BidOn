@model BidOn.Web.ViewModels.UserDetailsViewModel
<form class="form" action="##" method="post" id="registrationForm">
    <div class="form-group">

        <div class="col-xs-6">
            <label class="form-label">FullName</label>
            <input type="text" class="form-control mb-1" value="@Model.User.FullName">
        </div>
    </div>
    <div class="form-group">

        <div class="col-xs-6">
            <label class="form-label">Country</label>
            <input type="text" class="form-control mb-1" value="@Model.User.Country">
        </div>
    </div>

    <div class="form-group">

        <div class="col-xs-6">
            <label class="form-label">City</label>
            <input type="text" class="form-control mb-1" value="@Model.User.City">
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-6">
            <label class="form-label">Address</label>
            <input type="text" class="form-control mb-1" value="@Model.User.Address">
        </div>
    </div>
    <div class="form-group">

        <div class="col-xs-6">
            <label class="form-label">Email</label>
            <input type="text" class="form-control mb-1" value="@Model.User.Email">
        </div>
    </div>
    <div class="form-group">

        <div class="col-xs-6">
            <label class="form-label">UserName</label>
            <input type="text" class="form-control mb-1" value="@Model.User.UserName">
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-12">
            <br>
            <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
            <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
        </div>
    </div>
</form>