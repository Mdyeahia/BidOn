
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Simple Sidebar - Start Bootstrap Template</title>
    <!-- Favicon-->
    <script src="https://kit.fontawesome.com/39866f0022.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/css/dashboard.css" rel="stylesheet" />
    <script src="~/Content/vendor/jquery/dashboardJs.js"></script>
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-right bg-light" id="sidebar-wrapper">
            <div class="sidebar-heading fw-bolder">
                BidOn
                <i class="fas fa-hand-holding-usd"></i>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Dashboard")">Dashboard</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Category")">Category</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Auctions")">Auction</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Auctions")">Bids</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Auctions")">Comment</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Users")">Users</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("RoleIndex","Users")">Roles</a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-secondary" id="sidebarToggle"><i class="fas fa-indent"></i></button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item"><a class="nav-link">(Hi @User.Identity.Name)</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                
                                    <li class="nav-item">
                                        <a class="nav-link" id="logoutBtn">Logout</a>
                                    </li>
                                
                            }
                            else
                            {
                                
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Login","Account")">Login</a>
                                    </li>
                               
                            }
                        </ul>
                    </div>
                </div>
            </nav>
           
            <div class="container-fluid p-1">
                @RenderBody()
            </div>
        </div>
    </div>
   
   
</body>
</html>


<form id="logoutForm" method="post" action="@Url.Action("LogOff","Account")">
    @Html.AntiForgeryToken()
</form>
@RenderSection("Scripts", required: false)
<script>
    $("#logoutBtn").click(function () {
        $("#logoutForm").submit();
    })
</script>
